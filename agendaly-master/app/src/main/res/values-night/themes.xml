<resources>
    <!-- Base application theme -->
    <style name="Theme.Agendaly" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand -->
        <item name="colorSecondary">@color/gray</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/gray</item>
        <item name="alertDialogTheme">@style/Theme.Agendaly.Dialog</item>
    </style>
    <style name="Theme.Agendaly.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Agendaly.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Agendaly.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="Theme.Agendaly.Dialog" parent="Theme.AppCompat.DayNight.Dialog" />
    <style name="Theme.Agendaly.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert" />
    <style name="Theme.Agendaly.DatePickerDialog" parent="@android:style/Theme.Holo.Dialog.MinWidth" />
    <style name="Theme.Agendaly.CheckBox">
        <item name="colorControlActivated">@color/white</item>
    </style>
</resources>
